<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UnitConverterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvInput"
                style="@style/tvStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="8"
                android:maxLength="15"
                android:textAlignment="textEnd"
                tools:text="100000" />

            <TextView
                android:id="@+id/tvInputUnit"
                style="@style/tvStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                tools:text="m" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="invisible"
            tools:visibility="visible">

            <View
                style="@style/line"
                android:layout_width="0dp"
                android:layout_weight="8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:fontFamily="sans-serif-thin"
                android:text="@string/equals_to"
                android:textAlignment="center"
                android:textColor="@color/dayNightColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOutput"
                style="@style/tvStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="8"
                android:textAlignment="textEnd"
                tools:text="100" />

            <TextView
                android:id="@+id/tvOutputUnit"
                style="@style/tvStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_weight="2"
                tools:text="km" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabForward"
            style="@style/fabBigInv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/spTo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/spFrom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.875"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBackward"
            style="@style/fabBigInv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fabForward"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fabForward"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.875"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <Button
            android:id="@+id/btUnitSelect"
            style="@style/fontStyle"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:text="@string/select_a_unit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spFrom"
            style="@style/sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fabForward"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.763" />

        <Spinner
            android:id="@+id/spTo"
            style="@style/sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fabForward"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.763" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            style="@style/btRow"
            android:layout_weight="0.7">

            <Button
                android:id="@+id/btAC"
                style="@style/btOpBig"
                android:text="AC"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btDelete"
                style="@style/btOpBig"
                android:text="âŒ«"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout style="@style/btRow">

            <Button
                android:id="@+id/bt7"
                style="@style/btNumBig"
                android:text="7" />

            <Button
                android:id="@+id/bt8"
                style="@style/btNumBig"
                android:text="8" />

            <Button
                android:id="@+id/bt9"
                style="@style/btNumBig"
                android:text="9" />

        </LinearLayout>

        <LinearLayout style="@style/btRow">

            <Button
                android:id="@+id/bt4"
                style="@style/btNumBig"
                android:text="4" />

            <Button
                android:id="@+id/bt5"
                style="@style/btNumBig"
                android:text="5" />

            <Button
                android:id="@+id/bt6"
                style="@style/btNumBig"
                android:text="6" />

        </LinearLayout>

        <LinearLayout style="@style/btRow">

            <Button
                android:id="@+id/bt1"
                style="@style/btNumBig"
                android:text="1" />

            <Button
                android:id="@+id/bt2"
                style="@style/btNumBig"
                android:text="2" />

            <Button
                android:id="@+id/bt3"
                style="@style/btNumBig"
                android:text="3" />

        </LinearLayout>

        <LinearLayout style="@style/btRow">

            <Button
                android:id="@+id/btDot"
                style="@style/btNumBig"
                android:text="." />

            <Button
                android:id="@+id/bt0"
                style="@style/btNumBig"
                android:text="0" />

            <Button
                android:id="@+id/btEqual"
                style="@style/btNumBig"
                android:background="@drawable/ripple_effect"
                android:text="="
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>